
{%- if section.settings.bg_image != blank -%}
  {%- assign bg_image_url = section.settings.bg_image | image_url: width: 1920 -%}
  {%- assign bg_style = 'background-image: url(' | append: bg_image_url | append: '); background-size: cover; background-position: center; background-repeat: no-repeat;' -%}
{%- else -%}
  {%- assign bg_style = 'background-color: ' | append: section.settings.bg_color | append: ';' -%}
{%- endif -%}

<div style="{{ bg_style }}"></div>

{%- assign section_tag = 'div' -%}
{%- if section.settings.button_label == blank and section.settings.button_url != blank -%}
  {%- assign section_tag = 'a' -%}
{%- endif -%}

{%- assign min_height = section.settings.section_height | append: 'px' -%}

<{{ section_tag }}
  {% if section_tag == 'a' %}href="{{ section.settings.button_url }}"{% endif %}
  class="section section--{{ section.settings.section_width }}"
  data-testid="claude-welcome-{{ section.id }}"
  style="{{ bg_style }} text-align: center; display: flex; align-items: center; justify-content: center; min-height: {{ min_height }}; text-decoration: none;"
>
  <div
    class="spacing-style claude-welcome__inner"
    style="{% render 'spacing-style', settings: section.settings %} display: flex; flex-direction: column; align-items: center; width: 100%;"
  >
    {%- if section.settings.heading != blank -%}
      <h2 class="claude-welcome__heading" style="color: #fff; font-weight: 700; text-transform: uppercase; letter-spacing: 0.05em; margin-block-end: 1rem;">{{ section.settings.heading | escape }}</h2>
    {%- endif -%}

    {%- if section.settings.text != blank -%}
      {%- assign text_max_height = section.settings.text_max_height | append: 'px' -%}
      <div
        class="claude-welcome__text-outer"
        style="height: {{ text_max_height }}; overflow: hidden; margin-block-end: 1.5rem; width: 100%;"
      >
        <div
          class="claude-welcome__text rte"
          data-autoscroll="{{ section.id }}"
          data-scroll-speed="{{ section.settings.scroll_speed }}"
          data-scroll-enabled="{{ section.settings.auto_scroll_enabled }}"
          data-hover-pause="{{ section.settings.hover_pause_enabled }}"
          style="color: #fff; font-weight: 700;"
        >{{ section.settings.text }}</div>
      </div>
    {%- endif -%}

    {%- if section.settings.button_label != blank -%}
      <a
        class="claude-welcome__btn"
        {% if section.settings.button_url != blank %}href="{{ section.settings.button_url }}"{% endif %}
        style="display: inline-block; background-color: #FFD700; color: #000; font-weight: 700; text-transform: uppercase; letter-spacing: 0.05em; padding: 0.75rem 2rem; border-radius: 6px; text-decoration: none;"
      >
        {{ section.settings.button_label | escape }}
      </a>
    {%- endif -%}
  </div>
</{{ section_tag }}>

<script>
  (function () {
    function init() {
      var el = document.querySelector('[data-autoscroll="{{ section.id }}"]');
      if (!el || el.dataset.scrollEnabled === 'false') return;

      var speed = parseFloat(el.dataset.scrollSpeed) || 3;
      var hoverPause = el.dataset.hoverPause === 'true';
      var outer = el.parentElement;

      // Duplicate content for seamless infinite loop
      el.innerHTML = el.innerHTML + el.innerHTML;

      // Calculate duration: height of one cycle / pixels-per-second
      var cycleHeight = el.scrollHeight / 2;
      var pxPerSec = speed * 25;
      var duration = Math.max(cycleHeight / pxPerSec, 2);

      // Inject unique @keyframes
      var animId = 'cw_' + '{{ section.id }}'.replace(/[^a-zA-Z0-9_]/g, '_');
      var styleEl = document.createElement('style');
      styleEl.textContent = '@keyframes ' + animId + ' { from { transform: translateY(0); } to { transform: translateY(-50%); } }';
      document.head.appendChild(styleEl);

      el.style.animation = animId + ' ' + duration + 's linear infinite';
      el.style.willChange = 'transform';

      if (hoverPause) {
        outer.addEventListener('mouseenter', function () {
          el.style.animationPlayState = 'paused';
        });
        outer.addEventListener('mouseleave', function () {
          el.style.animationPlayState = 'running';
        });
      }
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', function () { setTimeout(init, 300); });
    } else {
      setTimeout(init, 300);
    }
  })();
</script>

{% stylesheet %}
  .claude-welcome-bg {
    background-color: #000;
  }

  .claude-welcome {
    background-color: #000;
    text-align: center;
  }

  .claude-welcome__inner {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .claude-welcome__heading {
    color: #fff;
    font-weight: 700;
    margin-block-end: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .claude-welcome__text-outer {
    position: relative;
  }

  .claude-welcome__text {
    color: #fff;
    font-weight: 700;
  }

  .claude-welcome__btn {
    display: inline-block;
    background-color: #FFD700;
    color: #000;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.75rem 2rem;
    border-radius: 6px;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .claude-welcome__btn:hover {
    opacity: 0.85;
  }
{% endstylesheet %}

